{
    "extends": [
        "airbnb",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2022
    },
    "env": {
        "node": true,
        "es2022": true
    },
    "rules": {
        "class-methods-use-this": "off",
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off"
    }
}